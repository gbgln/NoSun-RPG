@model NoSun.Models.Character

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="col-md-4">
        <h4>Character</h4>
        <hr />
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RaceID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.DropDownList("RaceID", "---Select your Race---")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ArmorID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.DropDownList("ArmorID", "---Select your Armor---")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.WeaponID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.DropDownList("WeaponID", "---Select your Weapon---")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EquipID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.DropDownList("EquipID", "---Select your Equipment---")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Hp, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Hp, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Hp, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
        
    <div class="col-md-4">
        <div class="form-horizontal">
            <h4>Stats</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.LabelFor(model => model.Atk, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.ValueFor(model => model.Atk)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Def, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayTextFor(model => model.Def)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Spd, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Spd)
                </div>
            </div>
        </div>

    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}