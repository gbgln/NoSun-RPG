@model IEnumerable<NoSun.Models.Race>

@{
    ViewBag.Title = "Hall of Races";
}

<h2>Hall of Races</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AtkMod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DefMod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpdMod)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AtkMod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DefMod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SpdMod)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RaceId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RaceId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RaceId })
        </td>
    </tr>
}

</table>
